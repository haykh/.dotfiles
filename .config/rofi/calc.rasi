window {
  width: 30%;
}

element {
  children: [ element-text ];
  padding: 0;
}

element-text {
  font: "MonaspiceKr Nerd Font 12";
  horizontal-align: 0;
}

element selected {
  background-color: transparent;
  border: none;
}

element-text selected {
  text-transform: underline white;
}

listview {
  margin: 0.5em 0 0 0;
  columns: 1;
  lines: 4;
  dynamic: true;
  cycle: false;
  scrollbar: false;
  scrollbar-width: 20px;
  dynamic: false;
}
