  :interval "5000s"
  :initial "x"
  :run-while false
  `jq -r '.icons.weather.humidity' ~/.config/master/mastercfg.json`
)

(defpoll pressureIcon
  :interval "5000s"
  :initial "x"
  :run-while false
  `jq -r '.icons.weather.pressure' ~/.config/master/mastercfg.json`
)

(defwidget weather []
  (tooltip
    (weather-tooltip)
    (box
      :class "weather-short"
      (eventbox 
        :cursor "context-menu"
        "⋮ ${ wttr_statusicon } ${ wttr_temp + wttr_daemon}°C"
      )
    )
  )
)

(defwidget forecast [date icon tmin tmax]
  (box
    :class "forecast-item"
    :orientation "v"
    (label 
      :xalign 0.5
      :text date
    )
    (box 
      :space-evenly false
      :orientation "h"
      (label
        :class "forecast-icon"
        :text icon
      )
      (label
        :class "forecast-temp"
        :text "${ tmin }°C/${ tmax }°C"
      )
    )
  )
)

(defwidget weather-tooltip []
  (box
    :space-evenly false
    :class "weather-long"
    :orientation "v"

    (box
      :space-evenly false
      :class "header"
      :orientation "h"
      (label 
        :xalign 0
        :text "@ ${ wttr_location }"
      )
      (label 
        :hexpand true
        :xalign 1
        :text "~${ wttr_status }~"
      )
    )
    
    (box
      :space-evenly false
      :class "main"
      :orientation "h"
      (box
        :space-evenly false
        :class "left"
        :orientation "v"
        (box
          :space-evenly false
          :class "temperature"
          (label 
            :yalign 1
            :text "${ wttr_temp }°C"
          )
          (label 
            :yalign 1
            :text "/${ wttr_feelslike }°C"
          )
        )
        (label 
          :xalign 0
          :tooltip "sunrise/sunset time"
          :text "${ sunriseIcon } ${ wttr_sunrise }
${ sunsetIcon } ${ wttr_sunset }"
        )
      )
      (box
        :hexpand true
        :class "right"
        :orientation "v"
        (label 
          :xalign 0.6
          :text wttr_statusicon
        )
        (label 
          :xalign 1
          :yalign 0
          :tooltip "precipitation"
          :text wttr_rainorsnow
        )
      )
    )

    (box
      :space-evenly false
      :class "extra"
      :orientation "h"
      (box
        :orientation "v"
        (label 
          :xalign 0
          :tooltip "UV index"
          :class "uvindex-${
            wttr_uvindex < 3 ? 
            1 :
            (
              wttr_uvindex < 6 ?
              2 :
              (
                wttr_uvindex < 8 ?
                3 :
                (
                  wttr_uvindex < 9 ?
                  4 :
                  (wttr_uvindex < 10 ? 5 : 6)
                )
              )
            ) 
          }"
          :text "${ uvIcon } ${ wttr_uvindex }"
        )
        (label 
          :xalign 0
          :text "${ windIcon } ${ wttr_wind }"
        )
      )
      (box
        :orientation "v"
        :hexpand true
        (label 
          :xalign 1
          :tooltip "humidity"
          :class "humidity-${
            wttr_humidity < 15 ? 
            1 :
            (
              wttr_humidity < 30 ?
              2 :
              (
                wttr_humidity < 35 ?
                3 :
                (
                  wttr_humidity < 55 ?
                  4 :
                  (
                    wttr_humidity < 65 ?
                    5 :
                    (
                      wttr_humidity < 80 ?
                      6 :
                      7
                    )
                  )
                )
              )
            )
          }"
          :text "${ wttr_humidity }% ${ humidityIcon }"
        )
        (label 
          :xalign 1
          :class "pressure-${
            wttr_pressure < 985 ? 
            1 :
            (
              wttr_pressure < 1007 ?
              2 :
              (
                wttr_pressure < 1015 ?
                3 :
                (
                  wttr_pressure < 1021 ?
                  4 :
                  5
                )
              )
            )
          }"
          :text "${ wttr_pressure } hPa ${ pressureIcon }"
        )
      )
    )

    (box
      :space-evenly false
      :class "forecast"
      :orientation "h"
      (forecast 
        :date wttr_forecast1_date
        :icon wttr_forecast1_icon
        :tmin wttr_forecast1_tmin
        :tmax wttr_forecast1_tmax
      )
      (forecast 
        :date wttr_forecast2_date
        :icon wttr_forecast2_icon
        :tmin wttr_forecast2_tmin
        :tmax wttr_forecast2_tmax
      )
    )
  )
)
