; constants
(defpoll sunriseIcon
  :interval "5000s"
  :initial "x"
  :run-while false
  `jq -r '.icons.weather.sunrise' ~/.config/master/mastercfg.json`
)

(defpoll sunsetIcon
  :interval "5000s"
  :initial "x"
  :run-while false
  `jq -r '.icons.weather.sunset' ~/.config/master/mastercfg.json`
)

(defpoll uvIcon
  :interval "5000s"
  :initial "x"
  :run-while false
  `jq -r '.icons.weather.uv' ~/.config/master/mastercfg.json`
)

(defpoll windIcon
  :interval "5000s"
  :initial "x"
  :run-while false
  `jq -r '.icons.weather.wind' ~/.config/master/mastercfg.json`
